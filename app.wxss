 /* ty-form 表单 列表通用样式 */

.ty-form {
  padding: 30rpx 30rpx 0;
}

.ty-form-li {
  background: #fff;
  border-radius: 12rpx;
  padding-bottom: 30rpx;
  /* margin-bottom: 30rpx; */
  box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.1);
}

.ty-form-li .ty-form-li-line {
  margin: 10rpx 30rpx;
  padding: 20rpx 0rpx;
  font-size: 14px;
}

.ty-form-li .ty-form-li-line .ty-form-li-icon {
  height: 24rpx;
  width: 7rpx;
  background-color: #76BC21;
  display: inline-block;
  border-radius: 5px;
  vertical-align: middle;
}

.ty-form-li .ty-form-li-title {
  display: inline-block;
  vertical-align: middle;
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  margin-left: 20rpx;
}
.ty-list {
  padding: 30rpx 20rpx 0;
  font-size: 30rpx;
}

.ty-list-li {
  background: #fff;
  border-radius: 12rpx;
  /* padding-bottom: 20rpx; */
  margin-bottom: 30rpx;
}

.ty-list-bottom {
  padding: 20rpx 0;
  overflow: hidden;
  display: flex;
  flex-direction: row-reverse;
}

.ty-list-bottom-ok {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #78B93C;
  border: 1rpx solid #78B93C;
  color: #fff;
  font-size: 28rpx;
  margin: 0 30rpx 0 0;
  text-align: center;
}

.ty-list-bottom-cancel {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #78B93C;
  color: #78B93C;
  font-size: 28rpx;
  margin: 0 30rpx 0 0;
  text-align: center;
}

/* 页面通用样式 */
.ty-bottom-line {
