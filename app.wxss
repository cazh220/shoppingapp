}

/* 覆盖tabs组件的样式 */

.van-tabs__wrap {
  position: relative;
  box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.1);
}

.tabs-line {
  width: 1px;
  height: 30px;
  background-color: #e2e2e2;
  position: absolute;
  left: 50%;
  top: 15rpx;
  z-index: 1;
}

/* 滑块删除样式 */
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 16px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}

.delete_right {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -22px;
  margin-left: -15px;
}

